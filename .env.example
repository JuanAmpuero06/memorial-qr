# Memorial QR - Variables de Entorno

# ========================================
# BACKEND
# ========================================

# Base de datos PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@db:5432/memorial_qr

# Clave secreta para JWT (genera una nueva para producción)
SECRET_KEY=tu-clave-secreta-muy-larga-y-segura-cambiar-en-produccion

# Algoritmo JWT
ALGORITHM=HS256

# Duración del token en minutos
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Entorno (development, production)
ENVIRONMENT=development

# ========================================
# POSTGRES
# ========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=memorial_qr

# ========================================
# PGADMIN
# ========================================
PGADMIN_DEFAULT_EMAIL=admin@memorial-qr.com
PGADMIN_DEFAULT_PASSWORD=admin

# ========================================
# FRONTEND
# ========================================
VITE_API_URL=http://localhost:8000
